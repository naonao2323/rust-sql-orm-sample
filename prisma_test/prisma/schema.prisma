generator client {
  provider = "cargo prisma"
  output   = "../src/prisma.rs"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@mysql:3305/app"
}

model users {
  id         Int        @id
  name       String     @db.VarChar(255)
  manager_id Int
  comments   comments[]
}

model comments {
  test    String @db.VarChar(255)
  user_id Int
  id      Int    @id
  user    users  @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "user_id_fk")

  @@index([user_id], map: "user_id_fk")
}

